<div class="w-full h-lvh flex flex-col items-center justify-center bg-indigo-50">
<div class="flex items-center -mb-12 z-50 ">
<div class="rounded-full h-28 w-28 bg-indigo-500 flex items-center justify-center mr-4 shadow-lg">
  <span class="text-2xl text-indigo-50">
    <%= @contact.name[0] %>
  </span>
</div>
</div>
  <div class="container lg:w-2/6 xl:w-2/7 sm:w-full md:w-2/3    bg-white  shadow-lg">

  <div class="flex relative justify-end">
  <%= link_to contacts_path do %>
    <svg class="h-8 w-8 text-indigo-500 "  width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">  <path stroke="none" d="M0 0h24v24H0z"/>  <line x1="18" y1="6" x2="6" y2="18" />  <line x1="6" y1="6" x2="18" y2="18" /></svg>
    <% end %>
  </div>

    <div class="py-20">
      <h1 class="text-3xl font-bold mb-4 text-center text-indigo-950"><%= @contact.name %></h1>
      <p class="text-indigo-700 mb-4 text-center">User_No: <%= @contact.id %></p>
    </div>
    <div class="flex justify-between">
      <div class="w-full">
        <% @contacts.each do |contact| %>
          <%= link_to edit_contact_path(contact) do %>
            <button type="button" class="text-center text-indigo-50 font-bold w-full hover:bg-indigo-100 hover:text-indigo-400 bg-indigo-500 cursor-pointer p-4 border">Edit</button>
          <% end %>
        <% end %>
      </div>
        <%= link_to "Destroy", contact_path(@contact), method: :delete, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "w-full text-center text-indigo-50 font-bold w-full hover:bg-indigo-100 hover:text-indigo-400 bg-indigo-500 cursor-pointer p-4 border", remote: true %>    
    </div>
  </div>
</div>
